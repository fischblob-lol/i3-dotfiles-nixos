XTerm*color14:  #B5BFBC
XTerm*color15:  #d2dadd

! font (use faceName / faceSize to match kitty)
! XTerm*faceName:            CozetteVector
! XTerm*faceSize:            12
XTerm*faceName: VictorMono Nerd Font
XTerm*faceSize: 18 
XTerm*renderFont:          true
XTerm*allowBoldFonts:      true
XTerm*BoldFont:            auto

! padding / borders
XTerm*vt100.internalBorder:    35
XTerm*internalBorder:          35
XTerm*borderWidth:             0
XTerm*colorInnerBorder:        true
XTerm*borderColor:             #24273a

! scrollback and behavior
XTerm*saveLines:          10000
XTerm*scrollBar:          false
XTerm*loginShell:         true

! clipboard / paste behavior
XTerm*selectToClipboard:       true
XTerm*allowPasteControls:      false
! tweak disallowed paste chars if you want - leave default unless needed
! XTerm*disallowedPasteControls:

! visual / misc
XTerm*dynamicColors:      true
XTerm*metaSendsEscape:    true
XTerm*allowWindowOps:     false

XTerm*shading: 0


